<form class="align-block" action="/regisration" method="POST">
    {{!-- First name --}}
    <div class="form-group">
        <div class="col-sm-10">
            <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name">
        <div class="errors">
            {{#each errorMessages1}}
            <div>{{this}}</div>
            {{/each}}
        </div>
        </div>
    </div>

    {{!-- Last namee= --}}
    <div class="form-group">
        <div class="col-sm-10">
            <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last name">
        <div class="errors">
            {{#each errorMessages2}}
            <div>{{this}}</div>
            {{/each}}
        </div>
        </div>
    </div>

    {{!-- email --}}
    <div class="form-group">
        <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email" placeholder="Email">
        <div class="errors">
            {{#each errorMessages3}}
            <div>{{this}}</div>
            {{/each}}
        </div>
        </div>
    </div>

    {{!-- password --}}
    <div class="form-group">
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        <div class="errors">
            {{#each errorMessages4}}
            <div>{{this}}</div>
            {{/each}}
        </div>
        </div>
    </div>

    {{!-- bottom --}}
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-success pull-right" value="Regisration" />
        </div>
    </div>
</form>